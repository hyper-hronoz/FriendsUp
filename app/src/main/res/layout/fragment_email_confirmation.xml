<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.authorization.EmailConfirmationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="40dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/email_heading"
            android:text="Email confirmation"
            style="@style/heading"
            android:textColor="@color/dark"
            android:layout_marginBottom="40dp"
            />

        <TextView
            android:id="@+id/email_email"
            style="@style/heading"
            android:textSize="14sp"
            android:textColor="@color/dark"
            tools:text="We've sent you a confirmation email + email \nplease confirm it to continue"
            android:layout_marginBottom="40dp"
            />

        <Button
            android:id="@+id/confirm_email_button"
            style="@style/registration_button"
            android:layout_below="@+id/email_edit_text"
            android:background="@drawable/login_sign_up_button_filled"
            android:visibility="visible"
            android:text="I've confirmed"
            android:textColor="@color/white" />


    </LinearLayout>



</FrameLayout>