<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.NominationsFragment">


    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/default_photo"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/profile_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="@+id/userAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/like_button"
            android:padding="18dp"
            android:src="@drawable/ic_info"
            app:tint="@color/white" />

        <ImageButton
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/like_button"
            android:padding="18dp"
            android:src="@drawable/ic_like"
            app:tint="@color/white" />

        <ImageButton
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/like_button"
            android:padding="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_messages"
            app:tint="@color/white" />

    </LinearLayout>

    <ScrollView
        android:elevation="200dp"
        android:id="@+id/userScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/nominations_bottom_layout"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAvatar"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..." />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>