<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".fragments.authorization.registration.UserEmailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/email_heading"
            android:text="What's your email?"
            style="@style/heading"
            android:textColor="@color/dark"
            android:layout_marginBottom="43dp"
            />


        <EditText
            android:id="@+id/email_edit_text"
            android:hint="Email"
            android:layout_below="@+id/email_heading"
            style="@style/registration_login_edit_text"
            android:layout_marginBottom="43dp"
            />


        <Button
            android:id="@+id/confirm_email_button"
            style="@style/registration_button"
            android:layout_below="@+id/email_edit_text"
            android:background="@drawable/login_sign_up_button_filled"
            android:visibility="visible"
            android:text="Next"
            android:textColor="@color/white" />


    </RelativeLayout>

    <TextView
        android:id="@+id/already_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Already have an account?"
        android:textColor="@color/blue"
        android:textSize="16sp" />

</RelativeLayout>