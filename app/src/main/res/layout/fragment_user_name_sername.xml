<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.registration.UserNameSernameFragment">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:padding="40dp"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/name_sername_heading"
            android:text="What's your name?"
            style="@style/heading"
            android:textColor="@color/dark"
            android:layout_marginBottom="43dp"
            />


        <EditText
            android:id="@+id/name_edit_text"
            android:hint="Name"
            android:layout_below="@+id/name_sername_heading"
            style="@style/registration_login_edit_text"
            android:layout_marginBottom="16dp"
             />

        <EditText
            android:hint="Last name"
            android:id="@+id/sername_edit_text"
            android:layout_below="@+id/name_edit_text"
            style="@style/registration_login_edit_text"
            android:layout_marginBottom="24dp"
            />


        <TextView
            android:id="@+id/gender_heading"
            style="@style/heading"
            android:layout_below="@+id/sername_edit_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:text="Select gender"
            android:textColor="@color/dark" />

        <RadioGroup
            android:id="@+id/select_gender_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_heading"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="43dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Men" />

            <RadioButton
                android:id="@+id/radio_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Women" />

            <RadioButton
                android:id="@+id/radio_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Other" />
        </RadioGroup>

        <Button
            android:id="@+id/confirm_sername_name"
            style="@style/registration_button"
            android:layout_below="@+id/select_gender_radio_group"
            android:background="@drawable/login_sign_up_button_filled"
            android:text="Next"
            android:textColor="@color/white"
            android:visibility="visible" />


    </RelativeLayout>



</FrameLayout>