<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_bottom_bar_main"
    app:startDestination="@id/bottom_navigation_home">

    <fragment
        android:id="@+id/bottom_navigation_home"
        android:name="com.example.friendsup.fragments.main.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_bottom_navigation_home_to_bottom_navigation_search"
            app:destination="@id/bottom_navigation_search"
            app:enterAnim="@anim/fragment_enter_animation_from_left_to_right"
            app:exitAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popEnterAnim="@anim/fragment_enter_animation_from_right_to_left" />
        <action
            android:id="@+id/action_bottom_navigation_home_to_bottom_navigation_notifications"
            app:destination="@id/bottom_navigation_notifications"
            app:enterAnim="@anim/fragment_enter_animation_from_left_to_right"
            app:exitAnim="@anim/fragment_enter_animation_from_left_to_right"
            app:popEnterAnim="@anim/fragment_enter_animation_from_left_to_right" />
    </fragment>
    <fragment
        android:id="@+id/bottom_navigation_search"
        android:name="com.example.friendsup.fragments.main.Nominations"
        android:label="fragment_nominations"
        tools:layout="@layout/fragment_nominations" >
        <action
            android:id="@+id/action_bottom_navigation_search_to_bottom_navigation_notifications"
            app:destination="@id/bottom_navigation_notifications"
            app:enterAnim="@anim/fragment_enter_animation_from_left_to_right"
            app:exitAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popEnterAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popExitAnim="@anim/fragment_enter_animation_from_right_to_left" />
        <action
            android:id="@+id/action_bottom_navigation_search_to_bottom_navigation_home"
            app:destination="@id/bottom_navigation_home"
            app:enterAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:exitAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popEnterAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popExitAnim="@anim/fragment_enter_animation_from_right_to_left" />
    </fragment>
    <fragment
        android:id="@+id/bottom_navigation_notifications"
        android:name="com.example.friendsup.fragments.main.Notifications"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_bottom_navigation_notifications_to_bottom_navigation_search"
            app:destination="@id/bottom_navigation_search"
            app:enterAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:exitAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popEnterAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popExitAnim="@anim/fragment_enter_animation_from_right_to_left" />
        <action
            android:id="@+id/action_bottom_navigation_notifications_to_bottom_navigation_home"
            app:destination="@id/bottom_navigation_home"
            app:enterAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:exitAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popEnterAnim="@anim/fragment_enter_animation_from_right_to_left"
            app:popExitAnim="@anim/fragment_enter_animation_from_right_to_left" />
    </fragment>
</navigation>